@model List<ShopTree.Models.OrderDetail>
<tbody>
    @foreach (var item in Model)
    {
        var index = Model.IndexOf(item) + 1;
        var subTotal = item.Price * item.Quantity;
        <tr>
            <td>@index</td>
            <td>
                <span>@item.Product.ProductName</span>
            </td>
            <td>@item.Price</td>
            <td>@item.Quantity</td>
            <td>@subTotal.Value.ToString("C2")</td>
        </tr>
    }

</tbody>